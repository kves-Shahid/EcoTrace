@model IEnumerable<EcoTraceApp.Models.EventRegistration>
@{
    ViewData["Title"] = "My Missions";
    var missionCount = Model.Count();

    string rank = missionCount >= 5 ? "Eco Hero" : missionCount >= 3 ? "Forest Guardian" : missionCount >= 1 ? "Sapling" : "Seed";
    string rankColor = missionCount >= 5 ? "text-warning" : missionCount >= 3 ? "text-success" : "text-primary";
    double progress = Math.Min((missionCount / 5.0) * 100, 100);
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            <h2 class="fw-bold mb-4">My Volunteering Journey</h2>

            @if (!Model.Any())
            {
                <div class="text-center py-5 bg-light rounded-4 border-dashed">
                    <p class="text-muted">You haven't joined any missions yet. Time to start!</p>
                    <a asp-action="Index" class="btn btn-success rounded-pill">Find Events</a>
                </div>
            }
            else
            {
                @foreach (var reg in Model)
                {
                    <div class="card border-0 shadow-sm mb-3 position-relative @(reg.Event?.IsCompleted == true ? "border-start border-success border-4" : "")" style="border-radius: 15px;">
                        <div class="card-body d-flex align-items-center">
                            <div class="me-4 text-center bg-light p-3 rounded-3" style="min-width: 80px;">
                                <div class="small fw-bold text-uppercase">@reg.Event?.EventDate.ToString("MMM")</div>
                                <div class="fs-4 fw-bold">@reg.Event?.EventDate.ToString("dd")</div>
                            </div>

                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-1">@reg.Event?.Title</h5>
                                @if (reg.Event?.IsCompleted == true)
                                {
                                    <span class="badge bg-success-subtle text-success small mb-2">
                                        <i class="bi bi-patch-check-fill"></i> Impact: @reg.Event?.ImpactSummary
                                    </span>
                                }
                                <p class="text-muted small mb-0"><i class="bi bi-geo-alt"></i> @reg.Event?.LocationName</p>
                            </div>

                            <div>
                                <a asp-action="Details" asp-route-id="@reg.EventId" class="btn btn-sm btn-outline-dark rounded-pill">View</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow p-4 text-center bg-dark text-white" style="border-radius: 20px;">
                <div class="mb-3">
                    <i class="bi bi-shield-shaded display-1 @rankColor"></i>
                </div>
                <h3 class="fw-bold">@rank</h3>
                <p class="text-white-50 small">Environmental Impact Level</p>

                <div class="progress bg-secondary mt-3 mb-2" style="height: 12px; border-radius: 6px;">
                    <div class="progress-bar bg-success" style="width: @progress%"></div>
                </div>

                @if (missionCount < 5)
                {
                    <small class="text-white-50">Join @(5 - missionCount) more to become an Eco Hero!</small>
                }
                else
                {
                    <small class="text-warning fw-bold">Top Rank Achieved!</small>
                }

                <hr class="my-4 border-secondary" />

                <div class="d-flex justify-content-around">
                    <div>
                        <h4 class="mb-0 fw-bold">@missionCount</h4>
                        <small class="text-white-50">Missions</small>
                    </div>
                    <div>
                        <h4 class="mb-0 fw-bold">@(missionCount * 5)</h4>
                        <small class="text-white-50">Points</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>