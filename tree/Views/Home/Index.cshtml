@model IEnumerable<EcoTraceApp.Models.Event>
@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="container mt-3">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-success">Welcome to EcoTrace</h1>
        <p class="lead text-muted">Join a mission to protect our environment.</p>
    </div>

    <h3 class="fw-bold mb-4">Upcoming Events</h3>
    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <p class="text-muted">No missions active right now. Check back soon!</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0" style="border-radius: 15px; overflow: hidden;">
                        <div style="height: 200px; background-color: #f0f0f0;">
                            @if (!string.IsNullOrEmpty(item.MapUrl))
                            {
                                <iframe src="@item.MapUrl" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                            }
                            else if (!string.IsNullOrEmpty(item.MediaFilePath))
                            {
                                <img src="@item.MediaFilePath" class="w-100 h-100" style="object-fit: cover;" />
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <span class="badge bg-success mb-2 w-fit-content">@item.EventType</span>
                            <p class="text-primary small fw-bold mb-1">@item.EventDate.ToString("ddd, MMM d • h:mm tt")</p>
                            <h5 class="card-title fw-bold">@item.Title</h5>
                            <p class="text-muted small mb-3"><i class="bi bi-geo-alt-fill"></i> @item.LocationName</p>

                            <div class="mt-auto d-grid">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary fw-bold">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>