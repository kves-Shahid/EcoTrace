@model IEnumerable<EcoTraceApp.Models.Event>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Admin Control Center</h2>
        <a asp-action="CreateEvent" class="btn btn-success px-4">+ Create New Event</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0" style="border-radius: 15px; overflow: hidden;">
                    <div style="height: 200px; background-color: #f8f9fa; position: relative;">
                        @if (!string.IsNullOrEmpty(item.MediaFilePath))
                        {
                            <img src="@item.MediaFilePath" class="w-100 h-100" style="object-fit: cover;" />
                        }
                        else if (!string.IsNullOrEmpty(item.VideoUrl))
                        {
                            <div class="d-flex align-items-center justify-content-center h-100 bg-dark text-white">
                                <span>▶ Video Content</span>
                            </div>
                        }
                        <span class="badge bg-primary position-absolute top-0 end-0 m-3">@item.EventType</span>
                    </div>

                    <div class="card-body">
                        <p class="text-muted small mb-1">@item.EventDate.ToString("ddd, MMM d • h:mm tt")</p>
                        <h5 class="card-title fw-bold">@item.Title</h5>
                        <p class="text-muted small"><i class="bi bi-geo-alt"></i> @item.LocationName</p>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="text-success fw-bold">Free</span>
                            <div>
                                <a asp-action="EditEvent" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                                <button class="btn btn-outline-danger btn-sm">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>