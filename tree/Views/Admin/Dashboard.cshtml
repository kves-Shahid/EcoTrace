@model IEnumerable<EcoTraceApp.Models.Event>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Admin Control Center</h2>
        <a asp-action="CreateEvent" class="btn btn-success px-4">+ Create New Event</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0" style="border-radius: 20px; overflow: hidden; transition: 0.3s;">
                    <div style="height: 180px; background-color: #f0f0f0;">
                        @if (!string.IsNullOrEmpty(item.MapUrl))
                        {
                            <iframe src="@item.MapUrl" width="100%" height="100%" style="border:0;" allowfullscreen=""></iframe>
                        }
                        else if (!string.IsNullOrEmpty(item.MediaFilePath))
                        {
                            <img src="@item.MediaFilePath" class="w-100 h-100" style="object-fit: cover;" />
                        }
                    </div>

                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="badge bg-success">@item.EventType</span>
                            <span class="text-muted small">@item.Registrations.Count Joined</span>
                        </div>
                        <h5 class="card-title fw-bold">@item.Title</h5>
                        <p class="text-muted small"><i class="bi bi-geo-alt"></i> @item.LocationName</p>

                        <div class="d-flex gap-2 mt-3">
                            <a asp-action="EditEvent" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm flex-fill">Edit</a>
                            <a asp-action="EventVolunteers" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm flex-fill">Users</a>
                            <form asp-action="DeleteEvent" asp-route-id="@item.Id" method="post" class="flex-fill" onsubmit="return confirm('Delete this event?');">
                                <button type="submit" class="btn btn-outline-danger btn-sm w-100">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>